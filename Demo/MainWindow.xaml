    <!-- Window System Buttons -->
    <mahapps:MetroWindow.WindowButtonCommands>
        <mahapps:WindowButtonCommands Template="{StaticResource MahApps.Metro.Templates.WindowButtonCommands.Win10}"/>
    </mahapps:MetroWindow.WindowButtonCommands>

    <!-- Title Command Buttons -->
    <mahapps:MetroWindow.RightWindowCommands>
        <mahapps:WindowCommands ShowLastSeparator="False">
            <ToggleButton x:Name="MainWindowSettingsButton">
                <StackPanel Orientation="Horizontal">
                    <Path Width="14" Height="14" Stretch="Uniform"
                          Data="{StaticResource SettingsIconPathDataKey}" 
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=ButtonBase}, Path=Foreground}"/>
                    <TextBlock Margin="4 0 0 0" VerticalAlignment="Center"
                               Text="{lex:Loc String_MainWindowSettings}"/>
                </StackPanel>
            </ToggleButton>
            <Button Click="Button_Click_Help">
                <StackPanel Orientation="Horizontal">
                    <Path Width="14" Height="14" Stretch="Uniform"
                          Data="{StaticResource HelpIconPathDataKey}" 
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=ButtonBase}, Path=Foreground}"/>
                    <TextBlock Margin="4 0 0 0" VerticalAlignment="Center"
                               Text="{lex:Loc String_MainWindowHelp}"/>
                </StackPanel>
            </Button>
        </mahapps:WindowCommands>
    </mahapps:MetroWindow.RightWindowCommands>

    <!-- Flyouts -->
    <mahapps:MetroWindow.Flyouts>
        <mahapps:FlyoutsControl>
            <mahapps:Flyout x:Name="SettingsFlyout" Header="{lex:Loc String_MainWindowSettings}" Theme="Adapt" 
                            Position="Right" HorizontalContentAlignment="Stretch" AreAnimationsEnabled="True"
                            CloseButtonIsCancel="True"
                            IsOpen="{Binding ElementName=MainWindowSettingsButton, Path=IsChecked}"
                            Content="{StaticResource SettingsView}"
                            FontFamily="{StaticResource HeaderFontFamily}"/>
        </mahapps:FlyoutsControl>

    </mahapps:MetroWindow.Flyouts>





    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="MainRootTabControl">
            <TabControl.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.AnimatedTabControl.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </TabControl.Resources>

            <TabControl.ItemContainerStyle>
                <Style>
                    <Setter Property="TabItem.Visibility" Value="Collapsed"/>
                </Style>
            </TabControl.ItemContainerStyle>

            <TabItem >
                <Grid Background="#FFE5E5E5">
                    <TextBlock>开始</TextBlock>
                </Grid>
            </TabItem>

            <TabItem >
                <Grid >
                    <TextBlock>设置</TextBlock>
                </Grid>
            </TabItem>
        </TabControl>




        <DockPanel Grid.Row="1">
            <Button VerticalAlignment="Bottom" Click="Click_CN">CN</Button>
            <Button VerticalAlignment="Bottom" Click="Click_Theme">Theme</Button>
            <Button VerticalAlignment="Bottom" Click="Click_US">US</Button>
        </DockPanel>
    </Grid>
</mahapps:MetroWindow>
