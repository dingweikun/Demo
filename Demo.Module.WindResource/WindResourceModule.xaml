<md:ProjectModule
    x:Class="Demo.Module.WindResourceModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:md="clr-namespace:Demo.Module;assembly=Demo.Module"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Demo.Module.WindResource"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings" 
    xmlns:local="clr-namespace:Demo.Module"
    mc:Ignorable="d"
    md:ProjectModule.ModuleTitle="{lex:Loc String_ModuleTitle}">
 
    <Grid>

        <StackPanel>
            <TextBlock Style="{StaticResource HeadTextLevel1}" 
                       Text="{lex:Loc String_ModuleTitle}"/>
             <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=md:ProjectModule}, Path=ModuleTitle}"
                       Background="{DynamicResource AccentColorBrush}"/>
            <ToggleButton IsChecked="{Binding RelativeSource={RelativeSource AncestorType=md:ProjectModule},Path=IsInEdit}"> Edit Status </ToggleButton>

        </StackPanel>
        
    </Grid>
</md:ProjectModule>
